<!-- Loop over each post -->
{{#each posts as |post|}}
  <div class="post">
    <h3>
      <a href="/post/{{id}}">
        <div>{{postTitle}}
        </div>
      </a>
    </h3>
    <div>Posted by
      {{username}}
      on
      {{format_date postDate}}
    </div>
    <p class="card-body">
      {{postContent}}
    </p>
  </div>
{{/each}}